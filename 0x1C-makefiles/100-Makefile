CC = gcc
SRC = main.c school.c
OBJ = $(subst .c,.o,$(SRC))
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re
all: $(subst .c,.o,$(SRC)) m.h
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean

re: oclean all
